<comment>
problem   = one or two planets embedded in disk
reference =
configure = --prob=planet_disk_interaction --coord=cylindrical --eos=adiabatic -hdf5 -mpi # source term constraint is isothermal eos (hence locally isothermal)

<job>
problem_id  = disk      # problem ID: basename of output filenames

<output1>
file_type   = hdf5       # data dump
variable    = cons      #
dt          = 10    # time increment between outputs
#ghost_zones = 1 # include ghost cells

<output2>
file_type   = hst       # History data dump
dt          = 0.5    # time increment between outputs

<output3>
file_type = rst
dt = 500

<time>
cfl_number  = 0.3       # The Courant, Friedrichs, & Lewy (CFL) Number
nlim        = -1        # cycle limit
tlim        = 8000.      # time limit
integrator  = rk3      # time integration algorithm
xorder      = 2         # order of spatial reconstruction
ncycle_out  = 100         # interval for stdout summary info

<mesh>
# resolution: 8 cells per h=0.05 after 1 level of refinement

nx1         = 280             # Number of zones in X1-direction
x1min       = 0.25            # minimum value of X1
x1max       = 8.0            # maximum value of X1
ix1_bc      = user           # Inner-X1 boundary condition flag
ox1_bc      = user           # Outer-X1 boundary condition flag
x1rat       = 1.012454548098765      # non-uniform grid ratio

nx2         = 512      # Number of zones in X2-direction
x2min       = 0.             # minimum value of X2
x2max       = 6.2831853071795862   # maximum value of X2
ix2_bc      = periodic       # Inner-X2 boundary condition flag
ox2_bc      = periodic       # Outer-X2 boundary condition flag

nx3         = 1              # Number of zones in X3-direction
x3min       = -0.5           # minimum value of X3
x3max       = 0.5            # maximum value of X3
ix3_bc      = periodic       # Inner-X3 boundary condition flag
ox3_bc      = periodic       # Outer-X3 boundary condition flag

refinement  = static

<refinement1>
# 0.5 - 4, but with some small shrink to avoid bleeding into adjacent meshblocks
x1min = 0.501
x1max = 3.999
x2min = 0
x2max = 6.2831853071795862
level = 1

<meshblock>
nx1 = 28
nx2 = 16
nx3 = 1

<hydro>
gamma           = 1.66666667 # gamma = C_p/C_v
iso_sound_speed = 0.05        # isothermal sound speed
dfloor          = 1.e-6
pfloor          = 1.e-9

<orbital_advection>
OAorder     = 0   # 0: w/o OA, 1: w/ OA (1st), 2: w/ OA (2nd)
Omega0      = 0.0 # angular velocity of the system

<problem>
r0          = 1.0
rho0        = 1.0
p0_over_r0  = 0.0025
pslope      = -1
dslope      = -1.5
starmass = 1.0
planetgm = 0.
planetgm2 = 0.000954588
ptosr = 1.0
ptosr2 = 2.1
alpha = 0.001
nu_iso = 0.1
